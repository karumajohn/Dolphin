<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AddButton" parent="AppTheme">
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:drawableStart">@drawable/ic_add</item>
        <item name="android:drawablePadding">8dp</item>
    </style>


    <style name="AppTheme.FloatingColoredButton" parent="AppTheme">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
